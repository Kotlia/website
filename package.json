{
  "name": "website",
  "description": "Homepage for Japanese Grace Church of New York",
  "version": "1.0.0",
  "private": true,
  "author": "Shun Ueda <shu225@lehigh.edu> (@kotlia_js)",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "precommit": "yarn lint --fix && yarn stylelint --fix",
    "fixImport": "replace '~/src/' '' src -r",
    "commit": "yarn precommit && yarn fixImport && yarn format && git add . && cz"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": []
  },
  "dependencies": {
    "@draft-js-plugins/editor": "^4.1.0",
    "@draft-js-plugins/image": "^4.1.2",
    "@prismicio/client": "^5.1.0",
    "ast-types": "^0.14.2",
    "eslint-plugin-import-order-autofix": "^0.8.3",
    "hamburger-react": "^2.4.1",
    "interweave": "^12.8.0",
    "next": "11.0.1",
    "next-seo": "^4.26.0",
    "prismic-reactjs": "^1.3.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-froala-wysiwyg": "^4.0.3",
    "react-responsive": "^8.2.0",
    "sass": "^1.35.2",
    "suneditor": "^2.41.3",
    "suneditor-react": "^3.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/node": "14.17.4",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@types/react-responsive": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "^10.1.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.29.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-import-order-autofix": "^0.8.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "replace": "^1.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
